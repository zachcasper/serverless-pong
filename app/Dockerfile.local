FROM node:18-alpine

WORKDIR /app

# Copy package files
COPY package*.json ./

# Install dependencies
RUN npm install --production

# Copy source code
COPY src/ ./src/

# Expose port 3000
EXPOSE 3000

# Set environment variable for Redis URL (can be overridden in Kubernetes)
ENV CONNECTION_REDIS_URL=redis://redis:6379

# Run the local Express server
CMD ["node", "src/local.js"]
